extends layout

block content
  .container
    h1 Request Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/changepassword", method="post", style='max-width: 500px;')
      .form-group
          input.form-control(type='password', name="password", placeholder='Enter New Password')
      .form-group
          input.form-control(type='password', name="password2", placeholder='Enter New Password Again')
      button.btn.btn-default(type='submit') Submit
      a.btn.btn-primary(href='/', role='button') Cancel
      